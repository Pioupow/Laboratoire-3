<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <h1><%= title %></h1>

    <table class="table table-bordered" style="padding: 10px;">
        <thead>
            <tr>
                <th>Module</th>
                <th>État</th>
            </tr>
        </thead>
        <tbody>
            <% for (let i = 1; i <= 6; i++) { %>
                <tr>
                    <td>Module <%= i %></td>
                    <td>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="switch<%= i %>" name="module<%= i %>" <%= etatmodule[i] === "on" ? "checked" : "" %>>
                            <label class="form-check-label" for="switch<%= i %>"><%= etatmodule[i] === "on" ? "ON" : "OFF" %></label>
                        </div>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <!-- Bootstrap 5 JS (facultatif, inclus pour la compatibilité avec les fonctionnalités interactives) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>